---
import Layout from "@/layouts/Layout.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import Home from "@/components/Home.astro";
import About from "@/components/About.astro";
import ExperiencesContainer from "@/components/ExperiencesContainer.astro";
import FormationContainer from "@/components/FormationContainer.astro";
import CertificatesContainer from "@/components/CertificatesContainer.astro";
import Skills from "@/components/Skills.astro";
import Projects from "@/components/vue-components/Projects.vue";
import CodeIcon from "@/components/Icons/CodeIcon.vue";
---

<Layout title="Portfolio de Sandro || Desarrollador y Programador Web">
  <main>
    <SectionContainer
      id="home"
      class="flex items-center justify-center pt-52 pb-40"
    >
      <Home />
    </SectionContainer>

    <SectionContainer
      id="about-me"
      class="mx-auto flex flex-col justify-center items-center mb-28"
    >
      <About />
    </SectionContainer>

    <SectionContainer class="mx-auto" id="experiences"
      ><div class="flex flex-col justify-center sm:flex-row">
        <ExperiencesContainer />
        <FormationContainer />
      </div>
      <div class="text-center">
        <button
          class="rounded-full text-md mx-1 px-6 py-1 border-2 border-[#6ec26e] dark:border-yellow-200/90
           tracking-widest transition-all duration-200 ease-out hover:bg-green-400/90 dark:hover:bg-yellow-200/60 text-[#333333]
            dark:text-white cursor-pointer"
          id="certificates-button"
          data-translate-key="certificatesButton"
        >
          Mostrar certificados</button
        >
      </div>
    </SectionContainer>

    <SectionContainer
      class="certificates-section mx-auto -translate-x-[50rem] opacity-0 justify-center items-center max-w-[70rem] duration-200 transition-transform mb-20"
    >
      <CertificatesContainer />
    </SectionContainer>

    <SectionContainer
      class="flex flex-col sm:flex-row justify-center mx-auto items-center max-w-[80rem] -mt-[60rem] sm:-mt-[25rem] transition-all"
      id="skills"
    >
      <Skills />
    </SectionContainer>

    <SectionContainer class="max-w-[60rem] mx-auto block" id="projects">
      <div class="flex justify-center items-center m-10">
        <CodeIcon customProperties="size-12" />
        <span
          class="dark:text-white text-4xl mx-3"
          data-translate-key="projectsSection"
        >
          Proyectos
        </span>
      </div>
      <Projects client:only />
    </SectionContainer>
  </main>

  <style>
    .show {
      opacity: 1;
      transform: translate(0);
    }

    .movedown {
      margin-top: 0;
    }
  </style>

  <script>
    const showCertificatesButton: HTMLButtonElement = document.querySelector(
      "#certificates-button"
    )!;
    const certificatesSection: HTMLElement = document.querySelector(
      ".certificates-section"
    )!;

    const skillsSection: HTMLElement = document.querySelector("#skills")!;

    showCertificatesButton.addEventListener("click", () => {
      certificatesSection.classList.toggle("show");
      skillsSection.classList.toggle("movedown");
    });
  </script>
</Layout>
