---
import Languages from "./vue-components/Languages.vue";
---

<nav {...Astro.props} class="navbar-header">
  <a
    class="anchor-element hover:text-green-700 transition-colors duration-200 ease-out dark:hover:text-yellow-200/90"
    href="#home"
    data-translate-key="home">Inicio</a
  >
  <a
    class="anchor-element hover:text-green-700 transition-colors duration-200 ease-out dark:hover:text-yellow-200/90"
    href="#about-me"
    data-translate-key="about">Sobre m√≠</a
  >
  <a
    class="anchor-element hover:text-green-700 transition-colors duration-200 ease-out dark:hover:text-yellow-200/90"
    href="#experiences"
    data-translate-key="experiences">Experiencias</a
  >
  <a
    class="anchor-element hover:text-green-700 transition-colors duration-200 ease-out dark:hover:text-yellow-200/90"
    href="#projects"
    data-translate-key="projects">Proyectos</a
  >
  <a
    class="anchor-element hover:text-green-700 transition-colors duration-200 ease-out dark:hover:text-yellow-200/90"
    href="#contact"
    data-translate-key="contact">Contacto</a
  >
  <Languages client:only />
</nav>
<slot name="close-container" />

<style>
  .anchor-element {
    margin: 0.3rem;
    padding: 0.3rem;
    letter-spacing: 0.1rem;
  }
  .active {
    border-bottom: 1px solid;
    color: rgb(33, 85, 31);
  }

  .active-dark-mode {
    border-bottom: 1px solid;
    color: rgb(254 240 138 / 0.9);
  }
</style>

<script>
  import NavBarManager from "@/utils/NavBarManager";
  NavBarManager.getInstance();
</script>
