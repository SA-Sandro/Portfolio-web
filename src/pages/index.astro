---
import Layout from "@/layouts/Layout.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import Home from "@/components/Home.astro";
import About from "@/components/About.astro";
import ExperiencesContainer from "@/components/ExperiencesContainer.astro";
import FormationContainer from "@/components/FormationContainer.astro";
import CertificatesContainer from "@/components/CertificatesContainer.astro";
import Skills from "@/components/Skills.astro";
---

<Layout title="Portfolio de Sandro || Desarrollador y Programador Web">
  <main>
    <SectionContainer
      id="home"
      class="flex items-center justify-center lg:h-screen pt-20"
    >
      <Home />
    </SectionContainer>
    <SectionContainer
      id="about-me"
      class="lg:h-screen mx-auto flex flex-col justify-center items-center"
    >
      <About />
    </SectionContainer>

    <SectionContainer class="mx-auto pt-28" id="experiences"
      ><div class="flex flex-col justify-center sm:flex-row">
        <ExperiencesContainer />
        <FormationContainer />
      </div>
      <div class="text-center">
        <button
          class="rounded-full text-xs sm:text-base mx-1 px-6 py-1 border-2 border-[#6ec26e] dark:border-yellow-200/90
           tracking-widest transition-all duration-200 ease-out hover:bg-green-400/90 dark:hover:bg-yellow-200/60 text-[#333333]
            dark:text-white cursor-pointer"
          id="certificates-button"
          data-translate-key="certificatesButton"
        >
          Mostrar certificados</button
        >
      </div>
    </SectionContainer>

    <SectionContainer
      class="certificates-section lg:h-screen mx-auto opacity-0 -translate-x-96 justify-center items-center max-w-[70rem] duration-200 transition-all"
    >
      <CertificatesContainer />
    </SectionContainer>

    <SectionContainer
      class="flex flex-col sm:flex-row justify-center mx-auto items-center max-w-[80rem]"
      id="skills"
    >
      <Skills />
    </SectionContainer>
  </main>
  <style>
    .show {
      opacity: 1;
      transform: translate(0);
    }
  </style>
  <script>
    const showCertificatesButton: HTMLButtonElement = document.querySelector(
      "#certificates-button"
    )!;
    const certificatesSection: HTMLElement = document.querySelector(
      ".certificates-section"
    )!;

    showCertificatesButton.addEventListener("click", () => {
      certificatesSection.classList.toggle("show");
    });
  </script>
</Layout>
